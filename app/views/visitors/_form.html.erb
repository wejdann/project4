<h1>please , Write Your Information </h1>
<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row">
                <div class="col-sm-10 offset-sm-1 text-center">
<%= form_for @visitor , local: true do |f| %>
  <div class="form-group">
  <h2>	<%= f.label :FullName, 'Full Name :' %></h2>
  	<%= f.text_field :FullName , class: "form-control"%>
  </div>
      <div class="form-group">
  <h2>	<%= f.label :Phone_no, 'phone number :' %></h2>
  	<%= f.text_field :Phone_no, class: "form-control" %>
   </div>
      <div class="form-group">
  <h2>	<%= f.label :BirthDay, 'Birth Day :'  %></h2>
  	<%= f.date_select :BirthDay , :start_year=>1990 , :end_year=>2005 ,class: "form-control" %>
  </div>
<br><br>
  <%= f.submit "Submit", :class => "buttonAll" %>
<% end %>
            </div>
        </div>
    </div>
</section>

